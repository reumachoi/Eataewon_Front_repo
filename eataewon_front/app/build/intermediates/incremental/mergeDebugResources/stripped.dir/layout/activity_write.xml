<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".WriteActivity"
                                                   android:background="@color/white"
                                                   android:orientation="vertical">

    <EditText
            android:id="@+id/write_hashtag"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Tag"
            android:textColor="@color/black"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/write_content"
            app:layout_constraintTop_toBottomOf="@+id/write_content" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해시태그"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/write_hashtag"
            app:layout_constraintStart_toStartOf="@+id/write_hashtag" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="글쓰기"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/write_title"
            app:layout_constraintStart_toStartOf="@+id/write_title" />

    <EditText
            android:id="@+id/write_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/write_address"
            app:layout_constraintStart_toStartOf="@+id/write_address" />

    <EditText
            android:id="@+id/write_address"
            android:layout_width="341dp"
            android:layout_height="44dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/write_title"
            app:layout_constraintTop_toBottomOf="@+id/write_title"/>
    <TextView
            android:layout_width="339dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@+id/write_address" android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.165" app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:text="가게이름"
            app:layout_constraintVertical_bias="0.043" android:id="@+id/shopNameT"/>
    <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="68dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/write_address"
            tools:layout_editor_absoluteX="0dp">

    </FrameLayout>

    <!--가로 리사이클러 뷰-->

    <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/write_recyclerview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

            </androidx.recyclerview.widget.RecyclerView>

            <Button
                    android:id="@+id/write_imageBtn"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/style_imge_btn"
                    android:drawableTop="@drawable/ic_baseline_control_point_24"
                    android:drawablePadding="-40dp"
                    android:drawableTint="@color/black"
                    android:paddingTop="40dp"
                    android:text="사진선택"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/write_recyclerview"
                    app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <EditText
            android:id="@+id/write_content"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Content"
            android:textColor="@color/black"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/write_address"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개글"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/write_content"
            app:layout_constraintStart_toStartOf="@+id/write_content" />

    <Button
            android:id="@+id/write_cancleBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#989898"
            android:text="취소"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/write_writeBtn"
            app:layout_constraintEnd_toStartOf="@+id/write_writeBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/write_writeBtn" />

    <Button
            android:id="@+id/write_writeBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/black"
            android:text="쓰기"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/write_cancleBtn" />

    <Button
            android:id="@+id/write_addressBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찾기"
            app:layout_constraintBottom_toBottomOf="@+id/write_address"
            app:layout_constraintStart_toEndOf="@+id/write_address"
            app:layout_constraintTop_toTopOf="@+id/write_address" />

</androidx.constraintlayout.widget.ConstraintLayout>