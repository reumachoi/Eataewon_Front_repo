<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.eataewon">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <!-- queries에 카카오톡 패키지 추가 -->
    <queries>
        <package android:name="com.kakao.talk"/>
    </queries>

    <!-- 인터넷 사용 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- 도시 블록 내에서의 정확한 위치(네트워크 위치) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/> <!-- 정확한 위치 확보(네트워크 위치 + GPS 위치) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/> <!-- 추가 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- 저장소 권한 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:name="com.example.eataewon.GlobalApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            android:usesCleartextTraffic="true">


        <!--  최아름 카카오 sns, 네이버 map, 카카오 map    -->
        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="@string/google_maps_key"/>
        <meta-data
                android:name="com.naver.maps.map.CLIENT_ID"
                android:value="1o2hhvg6b8"/>

        <meta-data android:name="com.kakao.sdk.AppKey"
                   android:value="803510af840ec6fd9c1aefe41148b4e5"/>




        <activity
                android:name="com.example.eataewon.SecondActivity"
                android:exported="true"
                tools:ignore="Instantiatable"/>
        <activity
                android:name="com.example.eataewon.HomeActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.example.eataewon.KakaoActivity"
                  android:exported="true"/>

        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                        android:host="oauth"
                        android:scheme="kakaoa05f68a3850359a6d8c92e79cdc0d8cb"/>
            </intent-filter>
        </activity>

        <activity
                android:name="com.example.eataewon.SignActivity"
                android:exported="true"/>

        <activity
                android:name="com.example.eataewon.HomeActivity"
                android:exported="true">
            <intent-filter>

                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="com.example.eataewon.BbsDetailActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                        android:host="kakaolink"
                        android:scheme="803510af840ec6fd9c1aefe41148b4e5"/>
            </intent-filter>
        </activity>

    </application>

</manifest>