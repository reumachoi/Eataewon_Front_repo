    <!-- queries에 카카오톡 패키지 추가 -->
    <queries>
        <package android:name="com.kakao.talk"/>
    </queries>

    <!-- 인터넷 사용 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 도시 블록 내에서의 정확한 위치(네트워크 위치) -->
