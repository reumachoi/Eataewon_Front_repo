<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent" android:layout_width="match_parent">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".BbsDetailActivity"
            tools:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="1dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="102dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="103dp">

                    <TextView
                            android:text="유저이름"
                            android:layout_width="85dp"
                            android:layout_height="30dp" android:id="@+id/DeBbsUserT"
                            android:layout_weight="1"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="216dp" app:layout_constraintStart_toEndOf="@+id/imageView3"
                            app:layout_constraintHorizontal_bias="0.0"/>
                    <TextView
                            android:text="호감도"
                            android:layout_width="85dp"
                            android:layout_height="30dp" android:id="@+id/DeBbsLikePoT"
                            android:layout_weight="1"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintHorizontal_bias="0.129"
                            app:layout_constraintStart_toEndOf="@+id/DeBbsUserT" android:layout_marginTop="16dp"/>
                    <TextView
                            android:text="작성날짜"
                            android:layout_width="135dp"
                            android:layout_height="24dp" android:id="@+id/DeBbsWdateT"
                            android:layout_weight="1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="56dp"
                            android:layout_marginEnd="168dp" app:layout_constraintStart_toEndOf="@+id/imageView3"
                            app:layout_constraintHorizontal_bias="0.0"/>
                    <Button
                            android:text="수정"
                            android:layout_width="79dp"
                            android:layout_height="37dp" android:id="@+id/updateBtn" android:layout_weight="1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.947"
                            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
                    <Button
                            android:text="삭제"
                            android:layout_width="79dp"
                            android:layout_height="37dp" android:id="@+id/deleteBtn" android:layout_weight="1"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.947"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/updateBtn" android:layout_marginTop="8dp"/>
                    <ImageView
                            android:layout_width="66dp"
                            android:layout_height="64dp" app:srcCompat="@drawable/ic_baseline_account_circle_24"
                            android:id="@+id/imageView3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.047"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.41"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
           <HorizontalScrollView

                    android:layout_width="match_parent"
                    android:layout_height="443dp">
                <LinearLayout
                        android:id="@+id/picLinear"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    <ImageView
                            android:layout_width="583dp"
                            android:layout_height="466dp" app:srcCompat="@drawable/cafe1"
                            android:id="@+id/imageView4" android:layout_weight="1"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/cafe2"
                            android:id="@+id/imageView5" android:layout_weight="1"/>
                    <ImageView
                            android:layout_width="359dp"
                            android:layout_height="443dp" app:srcCompat="@drawable/cafe5"
                            android:id="@+id/imageView6" android:layout_weight="1"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/cafe4"
                            android:id="@+id/imageView8" android:layout_weight="1"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/cafe3"
                            android:id="@+id/imageView7" android:layout_weight="1"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                    android:text="큐레이션 제목"
                    android:layout_width="match_parent"
                    android:layout_height="56dp" android:id="@+id/DeTitle"/>
            <TextView
                    android:text="큐레이션 내용"
                    android:layout_width="match_parent"
                    android:layout_height="165dp" android:id="@+id/DeContent"/>
            <TextView
                    android:text="해시태그"
                    android:layout_width="match_parent"
                    android:layout_height="55dp" android:id="@+id/DeHashtag"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="가게이름"
                        android:layout_width="279dp"
                        android:layout_height="match_parent" android:id="@+id/DeLocation"/>
                <Button
                        android:text="더보기"
                        android:layout_width="127dp"
                        android:layout_height="match_parent" android:id="@+id/showDetailShop"/>

            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/showDetailShopField"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="110dp">
                <TextView
                        android:text="가게주소"
                        android:layout_width="67dp"
                        android:layout_height="27dp" android:id="@+id/DeBbsShopLocaT"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.047"/>
                <TextView
                        android:text="가게전호번호"
                        android:layout_width="100dp"
                        android:layout_height="28dp" android:id="@+id/DeBbsShopPhT"
                        app:layout_constraintTop_toBottomOf="@+id/DeBbsShopLocaT"
                        android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.051"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <FrameLayout
                    android:id="@+id/mapContent"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="337dp"
                    app:layout_constraintTop_toBottomOf="@+id/detailDateText" android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent">
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_below="@+id/HeartBtn"
            android:layout_alignRight="@+id/HeartBtn"
            android:src="@drawable/click_scrapbtn"
            android:id="@+id/ScrapBtn"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_share"
            android:layout_below="@+id/ScrapBtn"
            android:layout_alignRight="@+id/ScrapBtn"
            android:id="@+id/floShareBtn"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/click_likebtn"
            android:id="@+id/HeartBtn"/>
</RelativeLayout>