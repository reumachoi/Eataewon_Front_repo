<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="50dp"
              >

    <TextView
            android:id="@+id/ShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    <TextView
            android:id="@+id/ShopLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Location"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="left"/>
    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/BbsPhotoView1"
                    android:layout_width="550dp"
                    android:layout_height="640dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/food1"/>

            <ImageView
                    android:id="@+id/BbsPhotoView2"
                    android:layout_width="550dp"
                    android:layout_height="640dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/food1"/>

            <ImageView
                    android:id="@+id/BbsPhotoView3"
                    android:layout_width="550dp"
                    android:layout_height="640dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/food1"/>

            <ImageView
                    android:id="@+id/BbsPhotoView4"
                    android:layout_width="550dp"
                    android:layout_height="640dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/food1"/>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

        <ImageView
                android:id="@+id/UserProfilePic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/food1"/>

        <TextView
                android:id="@+id/UserNickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UserId"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <TextView
            android:id="@+id/BbsContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="게시판의 내용이 들어가는 곳"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:maxLines="5"/>

</LinearLayout>