<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="83dp"
            android:layout_height="20dp"
            android:text="My Page"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintVertical_bias="0.049" android:id="@+id/Title"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.19"
            android:id="@+id/title3" android:layout_marginBottom="432dp"
            app:layout_constraintTop_toBottomOf="@+id/NickCh"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="173dp"
            android:layout_height="24dp"
            android:text="닉네임"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.255"
            android:id="@+id/title2"
            app:layout_constraintTop_toBottomOf="@+id/Imagebtn" android:layout_marginTop="36dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.165"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/Title" android:layout_marginTop="32dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="호감도 "
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.585"
            android:id="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/Title"
            android:layout_marginTop="32dp"/>
    <Button
            android:text="사진 변경"
            android:layout_width="103dp"
            android:layout_height="42dp" android:id="@+id/Imagebtn"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.299"
    />
    <Button
            android:text="수정"
            android:layout_width="99dp"
            android:layout_height="55dp" android:id="@+id/correct"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="156dp"
            app:layout_constraintEnd_toStartOf="@+id/button3" app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintTop_toBottomOf="@+id/IntroCh" android:layout_marginTop="192dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Button"
            android:layout_width="100dp"
            android:layout_height="51dp" android:id="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="148dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.886"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName3"
            app:layout_constraintHorizontal_bias="0.444" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="40dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="101dp"
            android:layout_height="42dp" tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="483dp">
    </LinearLayout>
    <EditText
            android:layout_width="236dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/IntroCh"
            app:layout_constraintTop_toBottomOf="@+id/title3"
            android:layout_marginTop="40dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.256"/>
    <EditText
            android:layout_width="237dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/NickCh"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.279" app:layout_constraintTop_toBottomOf="@+id/title2"
            android:layout_marginTop="28dp"/>
    <EditText
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editTextTextPersonName3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="108dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>