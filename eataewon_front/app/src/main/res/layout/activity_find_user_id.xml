<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="#FFFDCD"
                                                   tools:context=".SignActivity">

    <TextView
            android:id="@+id/signUp_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Eat태원클래스"
            android:textColor="#FF9800"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TextContrastCheck"/>

    <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="찾으시려는 계정 정보를 입력해주세요"
            android:textColor="#FF9800"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/signUp_title"
            android:layout_marginTop="36dp"/>

    <TextView
            android:id="@+id/findResultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력하신 정보와 일치하는 계정을 찾았습니다"
            android:visibility="invisible"
            android:textColor="#FF9800"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/findEmailText"
            android:layout_marginTop="44dp"/>
    <TextView
            android:id="@+id/FindresultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호를 재설정했습니다"
            android:visibility="invisible"
            android:textColor="#FF9800"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/findEmailText"
            app:layout_constraintHorizontal_bias="0.486" android:layout_marginTop="296dp"/>
    <EditText
            android:id="@+id/findEmailText"
            android:layout_width="199dp"
            android:layout_height="44dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:textColor="@color/black"
            android:gravity="center"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/findIdText"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" app:layout_constraintHorizontal_bias="0.453"
            android:layout_marginTop="56dp"/>
    <TextView
            android:id="@+id/findIdResultId"
            android:layout_width="199dp"
            android:layout_height="44dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:textColor="@color/black"
            android:gravity="center"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/findResultText"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" app:layout_constraintHorizontal_bias="0.466"
            android:layout_marginTop="44dp"/>
    <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textColor="#FF9800"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/findEmailText"
            app:layout_constraintBottom_toBottomOf="@+id/findEmailText" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/findEmailText" android:layout_marginEnd="16dp"/>
    <Button
            android:text="이메일로찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/findEamilBtn"
            app:layout_constraintStart_toEndOf="@+id/findEmailText"
            android:layout_marginStart="32dp" app:layout_constraintTop_toTopOf="@+id/findEmailText"
            app:layout_constraintBottom_toBottomOf="@+id/findEmailText"/>
    <Button
            android:text="비밀번호재설정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resetPwdBtn"
            app:layout_constraintStart_toEndOf="@+id/resetPwdText" app:layout_constraintTop_toTopOf="@+id/resetPwdText"
            app:layout_constraintBottom_toBottomOf="@+id/resetPwdText" android:layout_marginStart="24dp"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PWD"
            android:textColor="#FF9800"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/resetPwdText"
            app:layout_constraintBottom_toBottomOf="@+id/resetPwdText" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toStartOf="@+id/resetPwdText" android:layout_marginEnd="20dp"/>
    <EditText
            android:id="@+id/resetPwdText"
            android:layout_width="199dp"
            android:layout_height="44dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:textColor="@color/black"
            android:gravity="center"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/findIdResultId"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" app:layout_constraintHorizontal_bias="0.463"
            android:layout_marginTop="40dp"/>
    <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ID"
            android:textColor="#FF9800"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/findIdText"
            app:layout_constraintEnd_toStartOf="@+id/findIdText"
            app:layout_constraintTop_toTopOf="@+id/findIdText"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="16dp"/>
    <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ID"
            android:textColor="#FF9800"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/findIdResultId" app:layout_constraintTop_toTopOf="@+id/findIdResultId"
            app:layout_constraintBottom_toBottomOf="@+id/findIdResultId" android:layout_marginEnd="24dp"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:id="@+id/findIdText"
            android:layout_width="199dp"
            android:layout_height="44dp"
            android:layout_marginTop="124dp"
            android:background="@drawable/style_edittext"
            android:ems="10"
            android:textColor="@color/black"
            android:gravity="center"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signUp_title"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" app:layout_constraintHorizontal_bias="0.453"/>

    <Button
            android:text="아이디로찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/findIdBtn"
            app:layout_constraintStart_toEndOf="@+id/findIdText" app:layout_constraintTop_toTopOf="@+id/findIdText"
            android:layout_marginStart="32dp" app:layout_constraintBottom_toBottomOf="@+id/findIdText"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:id="@+id/finishFindBtn"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:backgroundTint="#FF9800"
            android:text="찾기완료"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextContrastCheck" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintTop_toBottomOf="@+id/FindresultText" android:layout_marginTop="44dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>